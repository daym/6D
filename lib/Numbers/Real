#include "Values/Values"
#include "6D/Values"
#include "6D/Operations"
#include "6D/FFIs"

BEGIN_NAMESPACE_6D(Values)

DECLARE_SMALL_VALUE(Float, FFIs::NativeFloat)   
DECLARE_FFI_FN(FloatP)

NODET operator+(const Float& a, const Float& b) G_5D_PURE;
NODET operator-(const Float& a, const Float& b) G_5D_PURE;
NODET operator*(const Float& a, const Float& b) G_5D_PURE;
NODET operator/(const Float& a, const Float& b) G_5D_PURE;
NODET operator<=(const Float& a, const Float& b) G_5D_PURE;

NODET nan(void) G_5D_PURE;
NODET infinity(void) G_5D_PURE;
bool floatP(NODET node) G_5D_PURE;

END_NAMESPACE_6D(Values)
BEGIN_NAMESPACE_6D(FFIs)
bool toNativeFloat(NODET node, FFIs::NativeFloat& result) G_5D_PURE;
END_NAMESPACE_6D(FFIs)

